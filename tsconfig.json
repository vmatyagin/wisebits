{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ESNext",
        "module": "ESNext",
        "importsNotUsedAsValues": "remove",
        "isolatedModules": true,
        "sourceMap": false,
        "strict": false,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "*": ["./src/*"]
        }
    },
    "include": ["src/**/*"]
}
